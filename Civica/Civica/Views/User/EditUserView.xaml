<UserControl x:Class="Civica.Views.EditUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Civica.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <Grid>
        <Border Background="White"
             CornerRadius="10">

            <StackPanel VerticalAlignment="Top"
                     Margin="0 10 0 0"
                     Orientation="Vertical">



                <TextBlock Text="Opdater bruger"
                        TextAlignment="Center"
                        FontSize="20" FontWeight="Bold"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60*"/>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="53*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Content="Fornavn:"
    FontSize="16" FontWeight="Bold"/>

                    <Border
     Margin="5,31,5,0"
     Background="#FFF3F2F2"
     BorderBrush="LightGray"
     BorderThickness="1"
     CornerRadius="2" Grid.RowSpan="2">

                        <TextBox FontSize="16"
          Margin="2 5 2 5"
          BorderThickness="0"
          Background="Transparent"
          Text="{Binding SelectedUser.FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                    </Border>

                    <Label Content="Efternavn:" 
    Grid.Column="1"
    FontSize="16" Grid.ColumnSpan="2" FontWeight="Bold"/>

                    <Border
     Margin="5,31,5,0"
     Grid.Column="1"
     Background="#FFF3F2F2"
     BorderBrush="LightGray"
     BorderThickness="1"
     CornerRadius="2" Grid.ColumnSpan="2" Grid.RowSpan="2">

                        <TextBox FontSize="16"
          Margin="2 5 2 5"
          Background="Transparent"
          BorderThickness="0"
          Text="{Binding SelectedUser.LastName, UpdateSourceTrigger=PropertyChanged}"/>

                    </Border>

                </Grid>
                <Label Content="Adgangskode:"
Margin="0 0 10 0"
FontSize="16"
HorizontalAlignment="Left" FontWeight="Bold"/>

                <Border Margin="5 0 5 0"
 Background="#FFF3F2F2"
 BorderBrush="LightGray"
 BorderThickness="1"
 CornerRadius="2">
                    <TextBox FontSize="16"
      Background="Transparent"
      BorderThickness="0"
      Margin="2 5 2 5"
      Text="{Binding SelectedUser.Password, UpdateSourceTrigger=PropertyChanged}"/>
                </Border>

                <Button Height="40"
                     Width="150"
                     Margin="0 20 0 0"
                     Content="Opret"
                     Cursor="Hand"
                     Command="{Binding UpdateUserCmd}"
                     CommandParameter="{Binding}">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFF3F2F2"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE1E1E1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="{TemplateBinding Width}"
                                 Height="{TemplateBinding Height}"
                                 Background="{TemplateBinding Background}"
                                 CornerRadius="5"
                                 BorderBrush="LightGray"
                                 BorderThickness="1">

                                <TextBlock Text="Opret bruger"
                                        FontSize="16"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>

                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>