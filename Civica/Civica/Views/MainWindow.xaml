<Window x:Class="Civica.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Civica.Views"
        mc:Ignorable="d"
        MinHeight="800"
        MinWidth="1000"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="800"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1"
                    HorizontalAlignment="Right"
                    Margin="0 0 20 0"
                    Width="40"
                    Height="40"
                    Background="#FAFAFA"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="20">
                
            </Border>
            
        </Grid>

        <Image Source="/Resources/Images/Civica_Logo.png"/>

        <StackPanel Grid.Row="1"
                    Margin="0 5 0 0">
            <RadioButton Content="Igangværende"
                         FontSize="14"
                         Height="50"
                         IsChecked="True"
                         Cursor="Hand"
                         Style="{StaticResource MenuButtonTheme}"/>
            <RadioButton Content="Identificeret"
                         FontSize="14"
                         Height="50"
                         Cursor="Hand"
                         Style="{StaticResource MenuButtonTheme}"/>
            <RadioButton Content="Arkiv"
                         FontSize="14"
                         Height="50"
                         Cursor="Hand"
                         Style="{StaticResource MenuButtonTheme}"/>

            <RadioButton Content="Opret"
                         FontSize="14"
                         Height="50"
                         Cursor="Hand"
                         Style="{StaticResource MenuButtonTheme}"
                         Margin="0 150 0 0"/>
            <RadioButton Content="Opdater oplysninger"
                         FontSize="14"
                         Cursor="Hand"
                         Style="{StaticResource MenuButtonTheme}"
                         Height="50"/>
            <RadioButton Content="Slet"
                         FontSize="14"
                         Cursor="Hand"
                         Style="{StaticResource MenuButtonTheme}"
                         Height="50"/>
        </StackPanel>

        <Border Grid.Column="1"
                Grid.Row="1"
                Background="#FAFAFA">

            <ContentControl Margin="10"/>

        </Border>
        
    </Grid>
</Window>
