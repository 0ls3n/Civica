<Window x:Class="Civica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Civica"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel Width="300"
                    Height="350"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

            <TextBlock Text="Lav nyt projekt"
                       TextAlignment="Center"
                       FontSize="20"/>
            
            <TextBlock Text="Projektnavn"
                       Margin="0 10 0 0"/>
            
            <TextBox Margin="0 5 0 0"
                     Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Ejer"
                       Margin="0 10 0 0"/>
            <TextBox Margin="0 5 0 0"
                     Text="{Binding Owner, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Projektleder"
                       Margin="0 10 0 0"/>
            <TextBox Margin="0 5 0 0"
                     Text="{Binding Manager, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Projekt beskrivelse"
                       Margin="0 10 0 0"/>
            <TextBox Margin="0 5 0 0"
                     Height="100"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Height="20"
                    Width="75"
                    Margin="0 15 0 0"
                    Content="Opret" 
                    Command="{Binding CreateProjectCmd}"
                    CommandParameter="{Binding}"/>
            
        </StackPanel>
        

    </Grid>
</Window>
