<Application x:Class="Civica.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Civica"
             xmlns:viewModel="clr-namespace:Civica.ViewModels"
             xmlns:view="clr-namespace:Civica.Views"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Themes/MenuButtonTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:InProgressViewModel}">
                <view:InProgressView/>
            </DataTemplate>
            
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
